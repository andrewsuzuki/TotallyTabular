<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Impro-Visor-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#debugj2se) -->
    <target depends="compile" description="improvisor program" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="Impro-Visor" transport="dt_socket">
            <classpath refid="base.classpath"/>
        </nbjpdastart>
        <java classname="${improvisorClass}" fork="true">
            <classpath refid="base.classpath"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=none"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
